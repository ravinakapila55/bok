<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:gravity="center"
        android:padding="@dimen/margin_2"
        android:layout_margin="@dimen/margin_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvCompetiton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Running Competition"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCompetiton"
            android:text="Start from Sunday"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/margin_2"
            android:textColor="@color/gradient_1"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvBenefits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            android:text="Benefits:-2500"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/margin_2"
            android:visibility="gone"
            android:textColor="@color/light_green"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diamind"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/primary_bg"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/margin_v"
            android:textColor="@color/white"
            android:textStyle="normal"/>




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
