<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_above="@+id/lnBottom"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_height="180dp">

                    <LinearLayout
                        android:id="@+id/lnrefresh"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvBitcoin"
                                android:maxLength="10"
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:text="0.0"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:maxLength="10"
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:text="Ƀ"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvINR"
                                android:layout_width="wrap_content"
                                android:textColor="@color/button_background"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    </LinearLayout>



                <android.support.v7.widget.CardView
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="@dimen/margin_x"
                    android:layout_marginRight="@dimen/margin_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_x"
                        android:layout_marginBottom="@dimen/margin_x"
                        android:padding="@dimen/margin_v"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/currentsymbol"
                                        android:layout_width="wrap_content"
                                        android:textAppearance="?android:textAppearanceSmall"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_weight=".5"
                                        android:textAppearance="?android:textAppearanceSmall"
                                        android:textColor="@color/black"
                                        android:text="@string/wallet_balance"
                                        android:textStyle="bold"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/tvwallet"
                                        android:layout_width="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="end"
                                        android:layout_gravity="center_vertical"
                                        android:textStyle="bold"
                                        android:textAppearance="?android:textAppearanceSmall"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_x"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/margin_v"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="1Ƀ Buying rate "
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txBitcoin"
                            android:layout_width="match_parent"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/margin_v"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="1Ƀ Selling Rate "
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvSellrate"
                            android:layout_width="wrap_content"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_x"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:text="@string/place_Ask"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/tvRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="10"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/margin_xx"
                                android:layout_marginLeft="@dimen/margin_xx"
                                android:padding="@dimen/margin_v"
                                android:drawableRight="@drawable/circle_rs"
                                android:background="@drawable/edit_back"
                                android:layout_marginTop="@dimen/margin_x"
                                android:inputType="numberDecimal"
                                android:hint="@string/rate"/>

                         <TextView
                            android:id="@+id/tvbit"
                            android:layout_width="match_parent"
                             android:textSize="10dp"
                             android:gravity="center"
                             android:visibility="gone"
                             android:layout_marginTop="@dimen/margin_v"
                            android:textStyle="bold"
                            android:textColor="@color/button_background"
                            android:layout_height="wrap_content" />

                        <EditText
                                android:id="@+id/tvAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="10"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/margin_xx"
                                android:layout_marginLeft="@dimen/margin_xx"
                                android:padding="@dimen/margin_v"
                                android:drawableRight="@drawable/circle_rs"
                                android:background="@drawable/edit_back"
                                android:layout_marginTop="@dimen/margin_x"
                                android:inputType="numberDecimal"
                                android:hint="@string/amount"/>

                            <EditText
                                android:id="@+id/edQuantity"
                                android:layout_width="match_parent"
                                android:enabled="false"
                                android:layout_height="wrap_content"
                                android:maxLength="10"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/margin_xx"
                                android:layout_marginLeft="@dimen/margin_xx"
                                android:padding="@dimen/margin_v"
                                android:drawableRight="@drawable/circle_bit"
                                android:background="@drawable/edit_back"
                                android:layout_marginTop="@dimen/margin_x"
                                android:inputType="numberDecimal"
                                android:hint="@string/quantity"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBiding"
                        android:layout_width="wrap_content"
                        android:text="@string/confirm_ask"
                        android:padding="@dimen/margin_v"
                        android:background="@drawable/green_back_button"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvtxt"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="@color/button_background"
                        android:padding="@dimen/margin_x"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>


    <include layout="@layout/toolbar"
        android:id="@+id/tool"/>

</RelativeLayout>
