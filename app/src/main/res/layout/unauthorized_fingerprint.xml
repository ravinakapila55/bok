<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/line_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/margin_top"
                android:layout_height="@dimen/margin_top"
                android:src="@drawable/dot_icon"
                android:layout_marginLeft="@dimen/margin_v"
                />

            <TextView
                android:id="@+id/txTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unauthorized Fingerprint."
                android:padding="@dimen/margin_x"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>