<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_xx"
    android:layout_width="match_parent"
    android:background="@drawable/corner_radius_color_white"

    android:layout_height="wrap_content">


    <com.app.tigerpay.Util.GradientFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="@dimen/margin_18"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_margin="@dimen/margin_2"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">



     <com.app.tigerpay.Util.GradientFontTextView

        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you happy with our App? "
            android:layout_margin="@dimen/margin_v"

            android:textColor="@color/black"/>

        <com.app.tigerpay.Util.GradientFontTextView

            android:id="@+id/tv_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_v"
            android:text="Yes, Rate our App."

            android:textColor="@color/black"/>
        <com.app.tigerpay.Util.GradientFontTextView

            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_v"
            android:text="No, send feedback."

            android:textColor="@color/black"/>

        <com.app.tigerpay.Util.GradientFontTextView

            android:id="@+id/tv_dont_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_v"
            android:text="@string/don_t_ask_me_again"

            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>