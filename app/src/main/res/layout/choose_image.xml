<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardview_backgrond">

    <TextView
        android:layout_marginTop="@dimen/margin_xv"
        android:layout_gravity="center"
        android:padding="@dimen/margin_x"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/canceltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select File From"
        android:textColor="@color/gradient_2" />

    <LinearLayout
        android:layout_margin="@dimen/margin_v"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera"
            android:layout_weight="1"
            android:layout_width="@dimen/margin_22"
            android:layout_height="@dimen/margin_70"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_45"
            android:backgroundTint="@color/gradient_2"
            android:background="@drawable/camra" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_weight="1"
            android:layout_width="@dimen/margin_22"
            android:layout_height="@dimen/margin_70"
            android:layout_marginRight="@dimen/margin_45"
            android:background="@drawable/frame"
            android:backgroundTint="@color/gradient_2"
        />
    </LinearLayout>
</LinearLayout>