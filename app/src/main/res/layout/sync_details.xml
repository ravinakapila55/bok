<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_grey_color"
        android:layout_below="@+id/tool"
        />

    <CheckBox
        android:id="@+id/chkAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select All"
        android:layout_marginTop="@dimen/margin_v"
        android:buttonTint="@color/gradient_2"
        android:textColor="@color/gradient_2"
        android:layout_marginLeft="@dimen/margin_xv"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_v"
        android:layout_marginStart="@dimen/margin_v"
        android:layout_marginTop="@dimen/margin_v" />
</LinearLayout>