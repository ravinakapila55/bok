<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/light_yellow_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/margin_2">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/placeholder"
            android:layout_marginTop="@dimen/margin_2"
            app:civ_border_color="@color/text_bg"
            app:civ_border_width="2dp"
            />

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivProfile"
            android:text="Shadab Kuwar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_5"/>

        <TextView
            android:id="@+id/tvNoofTrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivProfile"
            android:text="No. of Trade :112"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileName"/>

        <TextView
            android:id="@+id/tvBtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="B0.00985623"
            android:textColor="@color/red_light"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            />


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/04/2020 07:34 AM"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/margin_5"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/tvBtc"
            />




    </android.support.constraint.ConstraintLayout>






</android.support.constraint.ConstraintLayout>

