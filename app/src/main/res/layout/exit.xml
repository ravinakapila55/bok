<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/line_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/margin_top"
                android:layout_height="@dimen/margin_top"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/margin_v"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You want to exit the app"
                    android:padding="@dimen/margin_x"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_v"
                android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/btncansel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:background="@drawable/line_background"
                        android:padding="@dimen/margin_x"
                        android:layout_weight="1"
                      />

                    <TextView
                        android:id="@+id/btnok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:gravity="center"
                        android:padding="@dimen/margin_x"
                        android:background="@drawable/line_background"
                        android:layout_weight="1"
                      />


            </LinearLayout>

    </LinearLayout>

</LinearLayout>