<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".26"
            android:background="@drawable/primary_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/your_current_btc_balance"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_size"/>

            <LinearLayout
                android:id="@+id/lnrefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_10"
                            android:text="Ƀ"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal_size" />


                        <TextView
                            android:id="@+id/tvBitcoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLength="10"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal_size"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


                <com.app.tigerpay.Util.GradientFontTextView
                    android:id="@+id/tvINR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/white_all_radius"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingEnd="@dimen/margin_12"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_12" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="Buy Rate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_small_size" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:background="@drawable/light_grey_all_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_2">


                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="@dimen/margin_2"
                            android:text="Ƀ"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            android:textStyle="bold" />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="01"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" = "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="@dimen/margin_2"
                            android:text="₹"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"/>


                        <com.app.tigerpay.Util.GradientFontTextView
                            android:id="@+id/tvBuyrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_3"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="Sell Rate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_small_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:background="@drawable/light_grey_all_radius"
                        android:gravity="center"
                        android:padding="@dimen/margin_2">


                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="@dimen/margin_2"
                            android:text="Ƀ"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            android:textStyle="bold" />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="01"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" = "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />

                        <com.app.tigerpay.Util.GradientFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="@dimen/margin_2"
                            android:text="₹"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />


                        <com.app.tigerpay.Util.GradientFontTextView
                            android:id="@+id/txSellRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small_size"
                            />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_5">

                <TextView
                    android:id="@+id/txBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@drawable/buy_dashboard_activebg"
                    android:gravity="center"
                    android:padding="@dimen/margin_6"
                    android:text="@string/buy"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txSelling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@drawable/sell_dashboard_inactivebg"
                    android:gravity="center"
                    android:padding="@dimen/margin_6"
                    android:text="@string/sell"
                    android:textColor="@color/text_grey_color"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".26"
            android:background="@color/text_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Frequented"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/lnSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_width="@dimen/freq_icon_width"
                        android:layout_height="@dimen/freq_icon_width"
                        android:background="@drawable/messages_black" />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/text_vsmall_size"
                        android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                    android:id="@+id/rlCountt"
                    android:background="@drawable/red_cirlce"
                    android:layout_height="@dimen/margin_xx"
                    android:layout_width="@dimen/margin_xx"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:id="@+id/tvCount"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:text="25"/>

                </RelativeLayout>
                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/freq_icon_width"
                        android:layout_height="@dimen/freq_icon_width"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/bitcoin_receiver_black" />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receive"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/text_vsmall_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lntransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/margin_55"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_height="@dimen/margin_50"
                        android:background="@drawable/transaction_black" />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/text_vsmall_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_width="@dimen/freq_icon_width"
                        android:layout_height="@dimen/freq_icon_width"
                        android:background="@drawable/send_black" />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/text_vsmall_size"
                        android:textStyle="bold" />

                </LinearLayout>



                <LinearLayout
                android:id="@+id/lnRateChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                    android:visibility="visible"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="@dimen/freq_icon_width"
                    android:layout_height="@dimen/freq_icon_width"
                    android:background="@drawable/activities_black" />

                    <com.app.tigerpay.Util.GradientFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activities"
                    android:textColor="@color/text_grey_color"
                    android:textSize="@dimen/text_vsmall_size"
                    android:textStyle="bold" />

            </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".23">

            <TextView
                android:id="@+id/tvWalletBal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/wallet_balance"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_size"/>

            <com.app.tigerpay.Util.GradientFontTextView
                android:id="@+id/tvwallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWalletBal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_grey_all_radius"
                android:paddingBottom="@dimen/margin_2"
                android:paddingEnd="@dimen/margin_12"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/margin_12" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_bg"
                android:layout_below="@+id/tvwallet"
                >

                <LinearLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnDeposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_6"
                        android:layout_marginTop="@dimen/wallet_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/wallet_icon_width"
                                android:layout_height="@dimen/wallet_icon_height"
                                android:background="@drawable/deposit_black" />

                            <com.app.tigerpay.Util.GradientFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/deposit"
                                android:textColor="@color/text_grey_color"
                                android:textSize="@dimen/text_vsmall_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/margin_2"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/text_bg" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_6"
                        android:layout_marginTop="@dimen/wallet_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/wallet_icon_width"
                                android:layout_height="@dimen/wallet_icon_height"
                                android:background="@drawable/withdraw_black" />

                            <com.app.tigerpay.Util.GradientFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/withdraw"
                                android:textColor="@color/text_grey_color"
                                android:textSize="@dimen/text_vsmall_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/margin_2"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/text_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnTransfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_6"
                        android:layout_marginTop="@dimen/wallet_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/wallet_icon_width"
                                android:layout_height="@dimen/wallet_icon_height"
                                android:background="@drawable/transfer_black" />

                            <com.app.tigerpay.Util.GradientFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/transfer"
                                android:textColor="@color/text_grey_color"
                                android:textSize="@dimen/text_vsmall_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/margin_2"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/text_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnRece"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_6"
                        android:layout_marginTop="@dimen/wallet_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/wallet_icon_width"
                                android:layout_height="@dimen/wallet_icon_height"
                                android:background="@drawable/black_receive" />

                            <com.app.tigerpay.Util.GradientFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/receive"
                                android:textColor="@color/text_grey_color"
                                android:textSize="@dimen/text_vsmall_size" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/margin_2"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/text_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnINR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_2"
                        android:layout_marginTop="@dimen/wallet_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/wallet_icon_width"
                                android:layout_height="@dimen/wallet_icon_height"
                                android:scaleType="fitXY"
                                android:src="@drawable/black_transaction" />

                            <com.app.tigerpay.Util.GradientFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/transaction"
                                android:textColor="@color/text_grey_color"
                                android:textSize="@dimen/text_vsmall_size" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/main"
                    android:orientation="horizontal"
                    android:background="@drawable/primary_bg">


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

      </LinearLayout>


</RelativeLayout>
