<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_margin="@dimen/margin_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_v"
        android:layout_marginBottom="@dimen/margin_v"
        android:padding="@dimen/margin_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="match_parent"
                android:text="status"
                android:gravity="end"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txAmount"
                    android:layout_width="wrap_content"
                    android:text="12233Rs "
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txdate"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="(19/12/2017 1.45 A.M) "
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_v"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvrate"
                    android:layout_width="wrap_content"
                    android:text="Rate : 15Rs "
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvquantity"
                    android:layout_width="wrap_content"
                    android:text="Quantity: 9"
                    android:layout_marginLeft="@dimen/margin_x"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
