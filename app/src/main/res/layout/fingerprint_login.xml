<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_after_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_bg"
    android:orientation="vertical"
  >

    <!--<include layout="@layout/toolbar" />-->
    <ImageView
        android:id="@+id/ivarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/back_errow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/logo_weight"
                android:layout_height="@dimen/logo_height"
                android:visibility="gone"
                android:background="@drawable/newlogo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".3"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:src="@drawable/placeholder"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                app:civ_border_color="@color/colorPrimary"
                android:layout_margin="@dimen/margin_v"
                app:civ_border_width="2dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_x"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Welcome Back"
                    android:textColor="@color/white"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txTxt"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txUnathorized"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:text="Unauthorized Fingerprint"
                    android:layout_marginTop="@dimen/margin_x"
                    android:textColor="@color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/margin_top"
                android:layout_height="@dimen/margin_top"
                android:background="@drawable/thumb"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/white" />

            <ImageView
                android:id="@+id/ivkeypad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/keyboard"
                android:backgroundTint="@color/white"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
