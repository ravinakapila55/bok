<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/primary_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ivarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/back_errow" />

        <RelativeLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_weight="0.9">

            <ImageView
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_90"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:background="@drawable/newlogo"/>

            <TextView
                android:id="@+id/tvGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter your 4-digit Secure PIN"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_above="@+id/llMain2"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/margin_18" />




            <LinearLayout
                android:id="@+id/llMain2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60"
                android:gravity="center"
                android:weightSum="4"
                android:layout_above="@+id/lnLayerforgot"
                android:layout_centerInParent="true"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_v"
                    >

                    <com.app.tigerpay.Widget.PinEntryEditText
                        android:id="@+id/txt_pin_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textIsSelectable="false"
                        android:enabled="false"
                        android:textSize="20sp"
                        app:pinBackgroundDrawable="@drawable/bg_pin"
                        app:pinAnimationType="popIn"
                        app:pinCharacterMask="*"
                        app:pinTextBottomPadding="10dp"
                        app:pinLineStroke="2dp"
                        android:visibility="invisible"
                        app:pinLineStrokeSelected="4dp"
                        app:pinBackgroundIsSquare="false"
                        app:pinLineColors="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pin1"
                            android:layout_width="@dimen/margin_40"
                            android:background="@drawable/circle_bg_white"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:id="@+id/pin2"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_width="@dimen/margin_40"
                            android:background="@drawable/circle_bg_white"
                            />

                        <ImageView
                            android:id="@+id/pin3"
                            android:layout_width="@dimen/margin_40"
                            android:background="@drawable/circle_bg_white"                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:id="@+id/pin4"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_width="@dimen/margin_40"
                            android:background="@drawable/circle_bg_white"/>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnLayerforgot"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_15"
                android:orientation="horizontal"
                android:visibility="invisible"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvattempts"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvforgot"
                    android:layout_width="wrap_content"
                    android:text="@string/forgot_pin"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="#ffffff"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginRight="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_x"
                    android:layout_marginRight="@dimen/margin_x"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:gravity="bottom"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/one_three"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_below="@+id/results"
                        android:layout_centerHorizontal="true"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="2"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25"  />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="3"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25"  />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/four_six"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_below="@+id/one_three"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="4"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/five"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="5"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25"  />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/six"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="6"
                                    android:textColor="@color/black"
                                    android:layout_margin="5dp"
                                    android:textSize="@dimen/margin_25"  />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/seven_nine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_below="@+id/four_six"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/seven"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="7"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25"  />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/eight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="8"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25"  />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="9"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/margin_25" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/star_hash"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_below="@+id/seven_nine"
                        android:layout_centerHorizontal="true"
                        android:weightSum="3"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:gravity="center">
                            <!--
                                                        android:background="@drawable/new_back"
                            -->

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/cross_key"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/zero"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_button"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ok"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="OK"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>