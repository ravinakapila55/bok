<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_adhaar_card_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rlImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200"
                android:background="@drawable/view_profile"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/margin_100"
                        android:layout_height="@dimen/margin_100"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/grey_cir_fill_primary_corner_" />

                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="@dimen/margin_30"
                        android:layout_marginLeft="-30dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_toRightOf="@+id/imgProfile"
                        android:src="@drawable/edit" />


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlImage"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edFirst"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="Name"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edEmail"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="Email Address"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvverifed"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_x"
                        android:layout_marginTop="@dimen/margin_x"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content" />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edGender"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="Gender"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edDob"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="Date of Birth"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edCountry"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="Country"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edState"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="State"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />

                    <com.app.tigerpay.Util.GradientFontTextView
                        android:id="@+id/edCity"

                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:hint="City"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:textSize="18dp"  />




                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
