<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_x"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnframe"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_v"
            android:layout_marginBottom="@dimen/margin_v"
            android:padding="@dimen/margin_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imDot"
                android:background="@drawable/dot_icon"
                android:layout_width="20dp"
                android:layout_gravity="end"
                android:layout_height="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:background="@drawable/bell"
                    android:layout_width="50dp"
                    android:backgroundTint="@color/gradient_1"
                    android:layout_height="50dp"
                    />

                <LinearLayout
                    android:id="@+id/lnhead"
                    android:layout_marginLeft="@dimen/margin_v"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvtitle"
                        android:layout_width="wrap_content"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lndescription"
                    android:layout_below="@+id/lnhead"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_v"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvdesription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lndescription"
                        android:layout_toStartOf="@+id/tvdate"
                        android:maxLines="2"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvdate"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_below="@+id/lndescription"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>
