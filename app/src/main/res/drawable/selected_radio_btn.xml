<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/gradient_2" />
            <size
                android:width="@dimen/margin_30"
                android:height="@dimen/margin_30"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/margin_5"/>
            <solid android:color="@color/gradient_2"/>
            <size
                android:width="@dimen/margin_10"
                android:height="@dimen/margin_10"/>
        </shape>
    </item>
</layer-list>